<!doctype html>
<%- include('partials/head') %>

  <body>
    <%- include('partials/header') %>
      <main>
        <div class="text-center">
          <div class="row flex justify-content-center p-5">
            
              <form class="form-horizontal" id="filter">
                <p>Search by:</p>
                <div class="form-group row">
                  <div class="form-group col-sm-3 col-xs-4">
                    <div class="input-group input-group-lg">
                      <input class="form-control input-lg" name="title" id="filterTitle" type="text" placeholder="Title" value="<%= searched.title %>">
                    </div>
                  </div>
                  <div class="form-group col-sm-3 col-xs-4">
                    <div class="input-group input-group-lg">
                      <input class="form-control input-lg" name="minPrice" id="filterMinPrice" type="number" min="0"
                        placeholder="Min price" value="<%= searched.minPrice %>">
                    </div>
                  </div>
                  <div class="form-group col-sm-3 col-xs-4">
                    <div class="input-group input-group-lg">
                      <input class="form-control input-lg" name="maxPrice" id="filterMaxPrice" type="number" min="0"
                        placeholder="Max price" value="<%= searched.maxPrice %>">
                    </div>
                  </div>
                  <div class="form-group col-sm-3 col-xs-4">
                    <button class="btn-primary btn-block btn-lg" type="submit">Search</button>
                  </div>
                </div>
              </form>
            
          </div>
        </div>
        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Offer</th>
              <th scope="col">Image</th>
              <th scope="col">Title</th>
              <th scope="col">Price</th>
              <th scope="col">Currency</th>
              <th scope="col">URL</th>
            </tr>
          </thead>
          <tbody id="results">
            <% show.forEach(item=> { %>
              <tr>
                <th scope="row">
                  <%= item.id %>
                </th>
                <td>
                  <a href="<%= item.photo %>" target="blank">
                    <div class="item-image" style="background-image: url(<%= item.photo %>);"></div>
                  </a>
                <td>
                  <%= item.title %>
                </td>
                <td>
                  <%= item.price %>
                </td>
                <td>
                  <%= item.currency %>
                </td>
                <td><a href="<%= item.link %>" target="blank">
                    <%= item.link %>
                  </a></td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </main>
      <%- include('partials/footer') %>
        <%- include('partials/scripts') %>
  </body>

  </html>