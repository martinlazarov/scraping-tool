{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "es2015"
    ],
    "module": "CommonJS",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "baseUrl": "./",
    "strict": false
  },
  "include": [
    "src/**/*",
    "tools/**/*"
  ],
  "exclude": [
    "./test/",
    "node_modules",
    "./dist/",
    "./dashboard/"
  ]
}